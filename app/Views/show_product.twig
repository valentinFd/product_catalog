{% extends "base.twig" %}

{% block title %}Show Product{% endblock %}
{% block heading %}Show Product{% endblock %}
{% block content %}
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col" class="col-md-2">Name</th>
                <th scope="col" class="col-md-2">Category</th>
                <th scope="col" class="col-md-2">Quantity</th>
                <th scope="col" class="col-md-2">Created At</th>
                <th scope="col" class="col-md-2">Updated At</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="col-md-2">{{ product.getName }}</td>
                <td class="col-md-2">{{ product.getCategory }}</td>
                <td class="col-md-2">{{ product.getQuantity }}</td>
                <td class="col-md-2">{{ product.getCreatedAt }}</td>
                <td class="col-md-2">{{ product.getUpdatedAt }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-auto">
            <a href="/products" class="btn btn-primary" role="button">Back</a>
        </div>
        <div class="col-md-auto">
            <a href="/products/{{ product.getId }}/edit" class="btn btn-primary" role="button">Edit</a>
        </div>
    </div>
{% endblock %}
