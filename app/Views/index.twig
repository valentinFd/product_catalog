{% extends "base.twig" %}

{% block title %}Log In{% endblock %}
{% block heading %}Log In{% endblock %}
{% block content %}
    <form method="post">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control w-25" id="username" name="username" placeholder="Username">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control w-25" id="password" name="password" placeholder="Password">
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Log In</button>
        </div>
    </form>
    <div class="mb-3">
        <a class="link-primary" href="/sign-up">Sign Up</a>
    </div>
{% endblock %}
